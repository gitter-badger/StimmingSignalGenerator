<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:StimmingSignalGenerator.MVVM.ViewModels;assembly=StimmingSignalGenerator"
        xmlns:v="clr-namespace:StimmingSignalGenerator.MVVM.Views;assembly=StimmingSignalGenerator"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800"
        x:Class="StimmingSignalGenerator.MVVM.Views.MainWindow"
        d:DataContext="vm:MainWindowViewModel"
        Title="StimmingSignalGenerator">
  <StackPanel Margin="5">
    <TabControl>
      <TabItem Header="Left" VerticalContentAlignment="Center">
        <StackPanel Margin="5">
          <v:BasicSignalGeneratorView DataContext="{Binding LeftSignalGeneratorVM}"/>
          <v:BasicSignalGeneratorView DataContext="{Binding LeftAM1SignalGeneratorVM}"/>
          <v:BasicSignalGeneratorView DataContext="{Binding LeftAM2SignalGeneratorVM}"/>
          <v:BasicSignalGeneratorView DataContext="{Binding LeftFMSignalGeneratorVM}"/>
        </StackPanel>
      </TabItem>
      <TabItem Header="Right" VerticalContentAlignment="Center">
        <StackPanel Margin="5">
          <v:BasicSignalGeneratorView DataContext="{Binding RightSignalGeneratorVM}"/>
          <v:BasicSignalGeneratorView DataContext="{Binding RightAM1SignalGeneratorVM}"/>
          <v:BasicSignalGeneratorView DataContext="{Binding RightAM2SignalGeneratorVM}"/>
          <v:BasicSignalGeneratorView DataContext="{Binding RightFMSignalGeneratorVM}"/>
        </StackPanel>
      </TabItem>
    </TabControl>
      <v:AudioPlayerView DataContext="{Binding AudioPlayerViewModel}" />
  </StackPanel>

</Window>
